{
    "ts-node": {
        "transpileOnly": true,
        "require": ["tsconfig-paths/register"]
    },
    "compilerOptions": {
        // Libraries
        "lib": ["es2021", "es7", "WebWorker", "dom", "DOM.Iterable"],
        // Options
        "allowJs": false,
        "alwaysStrict": true,
        "exactOptionalPropertyTypes": true,
        "strict": true,
        "target": "ES2022",
        // Alias paths
        "baseUrl": ".",
        "paths": {
            "@ts/*": ["ts/*"],
            "@tsx/*": ["tsx/*"]
        }
    },
    "exclude": ["node_modules"]
}
