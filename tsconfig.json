{
    "compilerOptions": {
        // Libraries
        "lib": ["es2021", "es5", "es7", "WebWorker", "dom"],
        // Options
        "allowJs": false,
        "alwaysStrict": true,
        "exactOptionalPropertyTypes": true,
        "strict": true,
        // Alias paths
        "baseUrl": ".",
        "paths": {
            "@ts/*": ["ts/*"],
            "@tsx/*": ["tsx/*"]
        }
    },
    "include": ["ts", "tsx"],
    "exclude": ["node_modules"]
}
